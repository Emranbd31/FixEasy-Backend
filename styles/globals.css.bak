@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
@import './tokens.css';

@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body {
  min-height: 100%;
  background: radial-gradient(circle at top left, rgba(46, 107, 255, 0.18), transparent 45%),
    radial-gradient(circle at bottom right, rgba(21, 41, 96, 0.5), var(--fx-slate-1) 60%);
  color: rgba(240, 245, 255, 0.96);
  font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  overscroll-behavior-y: none;
}

body {
  margin: 0;
}

a {
  color: inherit;
  text-decoration: none;
}

::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: rgba(15, 21, 44, 0.6);
}

::-webkit-scrollbar-thumb {
  background: rgba(104, 130, 255, 0.4);
  border-radius: 9999px;
}

@layer base {
  * {
    @apply border-transparent;
  }

  body {
    @apply bg-[color:var(--fx-slate-1)] text-white;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply font-semibold text-white;
  }
}

@layer utilities {
  .fx-container {
    @apply mx-auto w-full max-w-6xl px-5 sm:px-6 lg:px-8;
  }

  .glass-surface {
    backdrop-filter: blur(22px);
    background: linear-gradient(135deg, rgba(33, 47, 87, 0.78), rgba(15, 21, 44, 0.78));
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: var(--fx-shadow-3d);
  }
}
